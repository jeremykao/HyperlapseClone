<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

        <FrameLayout
            android:id="@+id/camera_preview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/record_button"
                android:layout_width="@dimen/record_button_size"
                android:layout_height="@dimen/record_button_size"
                android:background="@drawable/recordbutton"
                android:layout_marginBottom="@dimen/default_padding"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteish"
                android:textSize="@dimen/default_font_size"
                android:textStyle="bold"
                android:text="@string/default_recording_time"/>


        </LinearLayout>
 </FrameLayout>
